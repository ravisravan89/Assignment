<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="factItemViewModel"
            type="com.ravisravan.infyassignment.viewmodels.FactItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/container"
        android:padding="@dimen/card_padding"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/card_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/constraint_layout_padding">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/title_horizontal_padding"
                android:paddingVertical="@dimen/title_vertical_padding"
                android:text="@{factItemViewModel.row.title}"
                android:textColor="@color/title_text_color"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="@android:dimen/notification_large_icon_width"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:paddingHorizontal="@dimen/image_horizontal_padding"
                android:paddingVertical="@dimen/image_vertical_padding"
                android:scaleType="fitCenter"
                app:imageUrl="@{factItemViewModel.imageUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/description"
                android:layout_width="@dimen/zerowidth"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/description_horzontal_padding"
                android:paddingVertical="@dimen/description_vertical_padding"
                android:text="@{factItemViewModel.row.description}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toStartOf="@id/article_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>